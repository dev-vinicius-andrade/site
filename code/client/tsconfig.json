{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxFactory": "h",
    "lib": ["DOM", "ESNext", "dom.iterable", "scripthost"],
    "jsxFragmentFactory": "Fragment",
    "sourceMap": false,
    "baseUrl": "./",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@composables": ["src/composables"],
      "@composables/*": ["src/composables/*"],
      "@configurations/*": ["src/configurations/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@enums": ["src/enums"],
      "@enums/*": ["src/enums/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@helpers": ["src/helpers"],
      "@helpers/*": ["src/helpers/*"],
      "@router": ["src/router"],
      "@router/*": ["src/router/*"],
      "@plugins": ["src/plugins"],
      "@plugins/*": ["src/plugins/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@locales": ["src/locales"],
      "@locales/*": ["src/locales/*"],
      "@layouts": ["src/layouts"],
      "@layouts/*": ["src/layouts/*"],
      "@env/*": ["src/environments/*"],
      "@assets/*": ["src/assets/*"],
      "@theme": ["src/theme"],
      "@themes/*": ["src/themes/*"],
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vuetify",
      "vite/client",
      "vite-plugin-vue-layouts/client",
      "unplugin-vue-router/client"
    ],
    "composite": false,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "~icons/**/*",
    "*.d.ts",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "vite/plugins/**/*.ts"
  ],
  "exclude": ["dist", "node_modules", "cypress"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
